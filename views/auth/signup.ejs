<% layout('layouts/boilerplate') -%> <%-include('../partials/flash.ejs')%>

<div class="container" style="margin-top: 70px">
  <div class="row d-flex align-items-center">
    <div class="mb-3 mx-auto">
      <h1 style="text-align: center; color: gray">Sign Up</h1>
    </div>
    <div class="col-lg-4 mx-auto">
      <form action="/signup" method="POST">
        <div class="form-group mb-3">
          <label for="email">Email address</label>
          <input
            type="string"
            class="form-control"
            name="email"
            id="email"
            aria-describedby="emailHelp"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group mb-3">
          <label for="username">User Name</label>
          <input
            type="string"
            class="form-control"
            name="username"
            id="username"
            placeholder="Enter User Name"
          />
        </div>
        <div class="form-group mb-3">
          <label for="password">Password</label>
          <input
            type="string"
            class="form-control"
            name="password"
            id="password"
            placeholder=" Enter Password"
          />
        </div>
        <p style="font-weight: bold">Want to login as ?</p>
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            name="role"
            value="seller"
            id="role"
          />
          <label class="form-check-label" for="role"> Seller </label>
        </div>
        <div class="form-check mb-4">
          <input
            class="form-check-input"
            type="radio"
            name="role"
            id="role"
            value="buyer"
            checked
          />
          <label class="form-check-label" for="role"> Buyer </label>
        </div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
      </form>

      <p class="mt-2">
        Already account <span><a href="/login">Login</a></span>
      </p>
    </div>
  </div>
</div>
