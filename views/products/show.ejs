<% layout('layouts/boilerplate') -%>
<div class="row container-fluid">
  <div class="col-lg-6">
    <%-include("../partials/flash.ejs")%>
    <div class="col-4 lg">
      <div
        class="card shadow-lg p-3 mb-5 bg-body rounded h-200 mx-auto p-1"
        style="width: 22rem"
      >
        <img
          src="<%= product.img %>"
          class="img-fluid"
          style="height: 200px"
          alt="..."
        />
        <div class="card-body text-center">
          <h5 class="card-title"><%=product.name%></h5>

          <p class="card-text"><%=product.desc%></p>
          <h5 class="card-title">$<%=product.price%></h5>
          <a href="/products/<%=product._id%>" class="btn btn-sm btn-success"
            >Buy</a
          >
          <a href="/products/<%=product._id%>" class="btn btn-sm btn-secondary"
            >Add to Cart</a
          >
          <% if(product.author && currentUser &&
          product.author.equals(currentUser._id)){%>
          <a
            href="/products/<%=product._id%>/edit"
            class="btn btn-sm btn-primary"
            >Edit</a
          >
          <form
            action="/products/<%=product._id%>?_method=DELETE"
            method="POST"
            class="d-inline-block"
          >
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form>
          <%}%>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <h2 class="display-6">Leave Your Comment</h2>
    <form action="/products/<%=product.id%>" method="POST">
      <div class="mb-2">
        <fieldset class="starability-basic">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="rating"
            value="0"
            checked
            aria-label="No rating."
          />

          <input type="radio" id="rate1" name="rating" value="1" />
          <label for="rate1">1 star.</label>

          <input type="radio" id="rate2" name="rating" value="2" />
          <label for="rate2">2 stars.</label>

          <input type="radio" id="rate3" name="rating" value="3" />
          <label for="rate3">3 stars.</label>

          <input type="radio" id="rate4" name="rating" value="4" />
          <label for="rate4">4 stars.</label>

          <input type="radio" id="rate5" name="rating" value="5" />
          <label for="rate5">5 stars.</label>

          <span class="starability-focus-ring"></span>
        </fieldset>
      </div>
      <div class="mb-3">
        <label class="form-label" for="desc">Comment</label>
        <textarea
          class="form-control"
          name="comment"
          id="comment"
          rows="5"
          required
        ></textarea>
      </div>
      <button class="btn btn-sm btn-primary">Post</button>
    </form>

    <div class="my-3">
      <%for(let review of product.reviews){%>
      <div class="card w-75">
        <div class="card-body">
          <!-- <h5 class="card-title">Rating: <%=review.rating%></h5> -->
          <p class="starability-result" data-rating="<%=review.rating%>">
            Rated: 3 stars
          </p>
          <h5 class="card-title">Comment</h5>
          <p class="card-text"><%=review.comment%></p>
          <a href="#" class="btn btn-primary">Edit</a>
        </div>
      </div>
      <%}%>
    </div>
  </div>
</div>
